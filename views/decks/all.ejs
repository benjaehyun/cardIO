<%- include('../partials/decks/allHeader') %>

<div class="all-decks">
  <h1>All Decks</h1>
  <table id="deck-list">
    <thead>
      <tr>
        <th>Deck Name</th>
        <th>Created</th>
        <th>User</th>
        <th>Notes</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% decks.forEach(function(d) { %>
        <tr>
          <td><a href="/decks/<%=d._id%>"> <%= d.title %> </a></td>
          <td><%= d.createdAt.toLocaleDateString() %></td>
          <td class="deck-user"><img alt="avatar" src="<%= d.userAvatar %>" referrerpolicy="no-referrer" ><a href="/profiles/<%=d.user%>"><%= d.userName %></a></td>
          <td><%= d.notes %></td>
          <td>
            <div id="play">
              <form action="/decks/<%= d._id %>/play" method="GET">
                  <button type="submit">STUDY</button>
              </form>
             </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
  </table>
</div>


<%- include('../partials/footer') %>
