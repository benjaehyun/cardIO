<%- include('../partials/profiles/indexHeader') %>

<div class="user-decks">
  <h1><%= user.name %>'s Decks</h1>
  <img alt="avatar" src="<%= user.avatar %>" referrerpolicy="no-referrer" >
    
  <table id="deck-list">
    <thead>
      <tr>
        <th>Deck Name</th>
        <th>Created</th>
        <th>User</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <% decks.forEach(function(d) { %>
        <tr>
          <td><a href="/decks/<%=d._id%>"> <%= d.title %> </a></td>
          <td><%= d.createdAt.toLocaleDateString() %></td>
          <td class="deck-user"><img alt="avatar" src="<%= d.userAvatar %>" referrerpolicy="no-referrer" ><%= d.userName %></td>
          <td><%= d.notes %></td>
          <% if (currentUser._id.equals(d.user)) { %>
            <td><a href="/decks/<%= d._id %>/edit">Edit Details</a></td>
            
          <% } %>
          <td>
            <div id="play">
                  <form action="/decks/<%= d._id %>/play" method="GET">
                      <button type="submit">STUDY</button>
                  </form>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
</div>


<%- include('../partials/footer') %>