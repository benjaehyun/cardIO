<%- include('../partials/cards/editHeader') %>

<form action="/decks/<%=deck._id%>/cards/<%= card._id %>?_method=PUT" method="POST">
    <input type="text" name="front" value="<%= card.front %>"><br>
    <input type="text" name="back" value="<%= card.back %>"><br>
    <button type="submit">Update Card</button>    
</form>

<div id="delete-card">
    <% if (user?._id.equals(card.user)) { %>
        <form action="/decks/<%=deck._id%>/cards/<%=card._id%>?_method=DELETE" method="POST">
            <button type="submit">DELETE CARD</button>
        </form>
    <% } %>
</div>


